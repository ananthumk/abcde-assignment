# Backend Environment Variables
# Copy this file to .env and update with your actual values

# MongoDB Connection String
# Local: mongodb://localhost:27017/ecommerce
# Cloud: mongodb+srv://username:password@cluster.mongodb.net/ecommerce
MONGO_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/ecommerce

# Server Port
PORT=5000

# JWT Secret Key
# IMPORTANT: Change this to a strong, random string in production
# Generate one: https://www.strongpasswordgenerator.com/
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173
